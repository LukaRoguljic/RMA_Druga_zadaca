<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/customColor">

    <Button
        android:id="@+id/kmMilesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kmMilesText"
        />

    <Button
        android:id="@+id/celKelvinBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kmMilesBtn"
        android:text="@string/celKelvinText"/>

    <Button
        android:id="@+id/kmMphBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/celKelvinBtn"
        android:text="@string/kmhMphtext"/>

    <Button
        android:id="@+id/kgLbsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kmMphBtn"
        android:text="@string/kgToLbsText"/>

</RelativeLayout>
